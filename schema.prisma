datasource db {
  // could be postgresql or mysql
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model User {
  id            String   @id @default(cuid())
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  username      String
  email_id      String
  bot_username  String
  password      String
  api_key       String
  agent_name    String
  agent_desc    String
  agent_id      String
  profile_photo String?
  access_token  String
}

enum Tag {
  code
  writing
  typescript
  Writing
  productivity
  prompt
  translation
  programming
  academic
  research
  softwareDevelopment
  userExperience
  designer
  documentation
  softwareDevelopment2
  react
  game
  it
  frontend
  creative
}

model Meta {
  id          Int    @id @default(autoincrement())
  description String
  tags        Tag[]
  avatar      String
  Bots        Bots[]
}

model Bots {
  id       Int    @id @default(autoincrement())
  username String
  room_id  String
  meta     Meta   @relation(fields: [metaId], references: [id])
  metaId   Int
}
